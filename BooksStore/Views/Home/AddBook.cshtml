@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Add a Book";}

<h2>Add a Book <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddBook" method="post">
    @*<div class="form-group">
        <label for="SSN">SSN:</label>
        <input class="form-control" name="SSN" />
    </div>*@
    <div class="form-group">
        <label for="BookName">Name:</label>
        <input class="form-control" name="BookName" />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input class="form-control" name="Price" />
    </div>
    <div class="form-group">
        <label for="Category">Category:</label>
        <input class="form-control" name="Category" />
    </div>
    <div class="form-group">
        <label for="Author">Author:</label>
        <input class="form-control" name="Author" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Book Added</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>SSN</th><th>Name</th><th>Price</th><th>Category</th><th>Author</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.BookName</td>
                <td>@Model.Price</td>
                <td>@Model.Category</td>
                <td>@Model.Author</td>
            </tr>
        </tbody>
    </table>
}

