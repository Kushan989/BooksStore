@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Update a Book";}

<h2>Update a Book <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="BookName"></label>
        <input class="form-control" asp-for="BookName" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <input class="form-control" asp-for="Category" />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input class="form-control" asp-for="Author" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success" && Model!=null)
{
    <h2>Book</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>SSN</th><th>Name</th><th>Price</th><th>Category</th><th>Author</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.BookName</td>
                <td>@Model.Price</td>
                <td>@Model.Category</td>
                <td>@Model.Author</td>
            </tr>
        </tbody>
    </table>
}