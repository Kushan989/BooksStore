@model Book
@{ Layout = "_Layout"; ViewBag.Title = "Get Book by Id";}

<h2>Get a Book by SSN <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id">SSN:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Book</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Book</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead><tr><th>SSN</th><th>Name</th><th>Price</th><th>Category</th><th>Author</th></tr></thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.BookName</td>
                <td>@Model.Price</td>
                <td>@Model.Category</td>
                <td>@Model.Author</td>
            </tr>
        </tbody>
    </table>
}

