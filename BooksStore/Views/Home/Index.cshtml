@model IEnumerable<Book>
@{ Layout = "_Layout"; ViewBag.Title = "All Books";}

<h2>All Books Available</h2>
<a asp-action="AddBook" class="btn btn-sm btn-primary">Add Book</a>
<a asp-action="GetBook" class="btn btn-sm btn-secondary">Get Book</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>SSN</th><th>Name</th><th>Price</th><th>Category</th><th>Author</th><th>Update</th><th>Delete</th></tr></thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.BookName</td>
                <td>@r.Price</td>
                <td>@r.Category</td>
                <td>@r.Author</td>
                <td>
                    <a asp-action="UpdateBook" asp-route-id="@r.Id"><img src="/icons/note.png" /></a>
                </td>
                <td>
                    <form asp-action="DeleteBook" method="post">
                        <input type="hidden" value="@r.Id" name="id" />
                        <input type="image" src="~/icons/delete.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
